@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add your recipe!</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Ingredients)
    @Html.DropDownList("IngredientId")

    @Html.LabelFor(model => model.Instruction)
    @Html.TextAreaFor(model => model.Instruction)

  <input type="submit" value="add new recipe" />
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>