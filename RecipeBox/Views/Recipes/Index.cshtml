@{
  Layout = "_Layout";
}
@using RecipeBox.Models

<h1>Recipes for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
<h3> No recipe has been added yet. </h3>
}
else
{
  <ul>
    @foreach(Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId })</li>
    }
  </ul>
}
<p>@Html.ActionLink("View Shared Recipes", "SharedRecipes")
<p>@Html.ActionLink("Add Recipe", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>