@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model List<RecipeBox.Models.RecipeUser>
<h2>Shared Recipes:</h2>
<ul>
@if(Model.Count == 0)
{
    <p>No recipes have been shared with you</p>
}
else
{
    <ul>
        @foreach(RecipeUser join in Model)
        {
            <li>@Html.ActionLink($"{join.Recipe.Name}", "Details", new { id = join.Recipe.RecipeId })</li>
        }
    </ul>
}
